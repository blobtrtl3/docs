{
    "openapi": "3.0.0",
    "info": {
        "description": "Blob storage api",
        "title": "Trtl3 API",
        "contact": {},
        "version": "1.0"
    },
    "paths": {
        "/blobs": {
            "get": {
                "description": "Find all blobs inside a bucket",
                "summary": "Find blobs by bucket",
                "parameters": [
                    {
                        "description": "Access token",
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "default": "\"\""
                        }
                    },
                    {
                        "description": "Bucket name",
                        "name": "bucket",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/domain.BlobInfo"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "description": "Upload a blob to server",
                "summary": "Upload blob",
                "parameters": [
                    {
                        "description": "Access token",
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "default": "\"\""
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "bucket": {
                                        "description": "Bucket name",
                                        "type": "string"
                                    },
                                    "blob": {
                                        "description": "Blob file",
                                        "type": "string",
                                        "format": "binary"
                                    }
                                },
                                "required": [
                                    "bucket",
                                    "blob"
                                ]
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/domain.BlobInfo"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/blobs/download/{bucket}/{id}": {
            "get": {
                "description": "Download a single blob by using the bucket and id",
                "summary": "Download blob",
                "parameters": [
                    {
                        "description": "Access token",
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "default": "\"\""
                        }
                    },
                    {
                        "description": "Bucket name",
                        "name": "bucket",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "description": "Blob id",
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Binary file",
                        "content": {
                            "application/octet-stream": {
                                "schema": {
                                    "type": "string",
                                    "format": "binary"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/blobs/{bucket}/{id}": {
            "get": {
                "description": "Find blob by using bucket and id",
                "summary": "Find unique blob",
                "parameters": [
                    {
                        "description": "Access token",
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "default": "\"\""
                        }
                    },
                    {
                        "description": "Bucket name",
                        "name": "bucket",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "description": "Blob id",
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/domain.BlobInfo"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "domain.BlobInfo": {
                "type": "object",
                "properties": {
                    "bucket": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string"
                    },
                    "id": {
                        "type": "string"
                    },
                    "mime_type": {
                        "type": "string"
                    },
                    "size": {
                        "type": "integer"
                    }
                }
            }
        }
    }
}